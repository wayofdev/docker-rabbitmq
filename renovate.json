{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base"
    ],
    "automerge": true,
    "platformAutomerge": true,
    "packageRules": [
        {
            "matchManagers": [
                "regex"
            ],
            "matchPackageNames": [
                "rabbitmq_version"
            ],
            "datasourceTemplate": "docker",
            "depNameTemplate": "rabbitmq",
            "versioningTemplate": "docker"
        }
    ],
    "regexManagers": [
        {
            "fileMatch": [
                "^src/inventory\\.yml$"
            ],
            "matchStrings": [
                "^\\s*rabbitmq_version:\\s*(?<currentValue>\\S+)"
            ]
        }
    ]
}
